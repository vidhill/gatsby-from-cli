{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["react", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "filenames"],
  "rules": {
    "prettier/prettier": "warn",
    "filenames/match-exported": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
